@model IEnumerable<VideoTutorials.Models.Video>

@{
    ViewBag.Title = "Admin Index";
}


@Html.Partial("_AdminNavigation")

<h2>Welcome Admin</h2>
<p>List of videos waiting approval.</p>


    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categories.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tags)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Categories.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Watch", "WatchVideo", new { id = item.VideoID })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tags)
                </td>
                <td>
                    @Html.ActionLink("Approve", "ApproveVideo", new { id = item.VideoID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.VideoID })
                </td>
            </tr>
        }

    </table>
